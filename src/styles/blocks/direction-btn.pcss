.direction-btn {
    height: 50px;
    width: 50px;
    background-color: #353e4e;
    position: relative;

    &--prev {
        transform: rotate(-180deg);
    }
    &:hover {
        background-color: $gold;
    }
}

.direction-btn__icon{
    background: svg-load('arrow-down.svg', fill=$text-color, width=100%, height=100%);
    background-repeat: no-repeat;
    height: 10px;
    width: 10px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

