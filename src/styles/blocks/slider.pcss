.slider{
    display: flex;
    justify-content: space-between;
}
.slider__display {
    width: 55%;
}
.slider__info {
    width: 36%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}

.slider__display-pic {
    position: relative;
}

.slider__display--img {
    height: 100%;
    width: 100%;
    object-fit: cover;
}


.slider__preview {
    position: absolute;
    right: 0;
    bottom: 30px;
}

.slider__buttons {
    display: flex;
    flex-direction: column;
    position: absolute;
    left: 100%;
    bottom: 30px;
}

.slider__tags {
    margin-bottom: 48px;
}

.slider__info-title {
    font-size: 30px;
    font-weight: 700;
    margin-bottom: 44px;
}

.slider__info-desc {
    margin-bottom: 50px;
}

.slider__slide-count {
    color: #e6e6e6;
    font-size: 300px;
    font-weight: 800;
    position: absolute;
    bottom: 8%;

    left: 93%;
    z-index: -1;
}

.direction-btn {
    color: $text-color;
}