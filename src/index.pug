        section.contact
          .container
            h2.contact__title Contact me
            .contact__form
              form.form(@submit.prevent="submitForm")
                .form__row.form__row--first-row
                  label.form__block(:class="{error: !nameValid}")
                    .form__title Input your name
                    .form__input-row
                      .form__icon.form__icon--user
                      input.form__input.form__input--name(type="text" name="name" placeholder ="Firstname Lastname" required @input='validateName' onFocus="this.placeholder=''")
                    .form__input-error {{nameError}}
                  label.form__block(:class="{error: !emailValid}")
                    .form__title Input your email
                    .form__input-row
                      .form__icon.form__icon--envelope
                      input.form__input.form__input--email(type="text" name="email" placeholder ="example@email.com" required @input='validateEmail' onFocus="this.placeholder=''")
                    .form__input-error {{emailError}}
                .form__row
                  label.form__block.form__block--texarea(:class="{error: !messageValid}")
                    .form__title Write your message here
                    .form__input-row
                      .form__icon.form__icon--message
                      textarea(name="message", cols="30", rows="10", placeholder ="Here you can describe tasks and concept" @input='validateMessage' onFocus="this.placeholder=''").form__input.form__input--textarea
                    .form__input-error {{messageError}}
                button.form__btn(type="submit") Send
                .overlay(:class="{disabled: overlayHidden}" @click="hideOverlay")
                  .overlay__content
                    .overlay__message {{resultMessage}}
                    button.overlay__btn(@click.prevent="hideOverlay") Закрыть
