include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      section.section.intro
        .container
          header.header
            span.initials NK
            nav.nav
              ul.nav__list
                li.nav__item
                  a.nav__link(href="#") Main
                li.nav__item
                  a.nav__link(href="#") About me
                li.nav__item
                  a.nav__link(href="#") Skills
                li.nav__item
                  a.nav__link(href="#") Portfolio
                li.nav__item
                  a.nav__link(href="#") Testimonial
                li.nav__item
                  a.nav__link(href="#") Contacts
            .social
              ul.social__list
                li.social__item
                  a.social__link(href="#")
                    .social__icon.social__icon--insta
                li.social__item
                  a.social__link(href="#")
                    .social__icon.social__icon--vk
                li.social__item
                  a.social__link(href="#")
                    .social__icon.social__icon--github
          .intro-text
            .intro-text__left Personal<br/> portfolio page
            .intro-text__right Nikolai<br/> Kononenko
          a.scroll(href="#")
            .scroll__icon
      section.section.about
        .container.about__container
          .about__left
            .user
              .user__avatar.avatar
                +image("content/user.jpg", "avatar__pic", "user__pic")
              ul.user__desc
              -
                var rows = [
                  ['Location:','Helsinki'],
                  ['Age:', '29'],
                  ['DOB:', '10 March 1990']
                ];
              table.user__table
                each row in rows
                  tr.user__table-row
                    each cell in row
                      td #{cell}

          .about__right
            p.about__intro Hi, my name is
            h2.about__name Nikolai Kononenko
