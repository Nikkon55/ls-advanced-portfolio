        section.reviews(@click="checkArrows" @touchend="checkArrows")
          .container
            .reviews__first-line
              h2.reviews__title People tell about me
              .reviews-slider__controls
                .reviews-slider__controls-btn.reviews-slider__controls-btn--left(@click="previous" :disabled="true")
                  .reviews-slider__controls-btn-icon
                .reviews-slider__controls-btn.reviews-slider__controls-btn--right(@click="next" :disabled="false")
                  .reviews-slider__controls-btn-icon
            flickity(ref="flickity" :options="flickityOptions").reviews-slider
              -for (i=0;i<5;i++)
                .reviews-slider__item.carousel-cell
