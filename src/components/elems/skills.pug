script(type="text/x-template")#skills-list
    ul.skills-graphic
        li.skills-graphic__item(v-for="skill in skills")
            skills-row(
                :skill="skill"
            )
                
                                    
                                    
script(type="text/x-template")#skills-row
    .skills-row
        .skills-row__title {{skill.skillsGroup}}
        .skills-row__content
            ul.skills
                li.skills__item(v-for="(skillLevel, skillName) in skill.skills")
                    skill(
                        :skillName="skillName"
                        :skillLevel="skillLevel"
                    )

script(type="text/x-template")#skill
    .skill
        svg(viewbox="0 0 150 150" preserveAspectRatio="none").skill__shape
            defs.defs
                linearGradient(x1="0%" y1="50%" x2="100%" y2="100%")#skill__gradient
                    stop(offset="60%" stop-color="#ff9a00").skill__fill--start
                    stop(offset="100%" stop-color="#d47d1d").skill__fill--stop
            circle(
                r="65" cx="75" cy="75"
            ).skill__circle.skill__circle--under
            circle(
                r="65" cx="75" cy="75" stroke="url(#skill__gradient)" ref="gradient-circle" transform="rotate(-180 75 75)" style=`animation-delay:-25s;`
            ).skill__circle.skill__circle--above
        .skill__title {{skillName}}