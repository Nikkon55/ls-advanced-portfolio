script(type="text/x-template")#slider-container
    .slider
        display(:works="works" :currentWork="currentWork" @slide="handleSlide")
        info(:currentWork="currentWork")


script(type="text/x-template")#slider-display
    .slider__display
        .slider__display-pic
            img(:src="currentWork.photo" class="slider__display--img")
            .slider__preview
                btns(@slide="$emit('slide', $event)")
                preview(:works="reversedWorks" :currentWork="currentWork")   
            .slider__slide-count 2
    

script(type="text/x-template")#slider-preview
    ul.slider-list
        li.slider-list__item(
            v-for="work in works"
            :class="{active: work.id ===currentWork.id}"
            )
            a.slider-list__link(href="#")
                img(:src="work.photo", alt="", class="slider-list__img")
                
        

script(type="text/x-template")#slider-btns
    .slider__buttons
        a.direction-btn.direction-btn--next(@click.prevent="$emit('slide', 'next')" href="#")
            .direction-btn__icon
        a.direction-btn.direction-btn--prev(@click.prevent="$emit('slide', 'prev')" href="#")
            .direction-btn__icon

script(type="text/x-template")#slider-info
    .slider__info
        tags()
        .slider__info-text
            h3.slider__info-title {{currentWork.title}}
            .slider__info-desc {{currentWork.desc}}
        a.iconed-link(:href="currentWork.link")
            .iconed-link__icon
            .iconed-link__text Open link

script(type="text/x-template")#slider-tags
    .slider__tags
        ul.tags
            -var tags = ['HTML','CSS','Javascript']
            each tag in tags
                li.tags__item #{tag}